<angular-page name="/tags">
	<template>
		<site-content>
			<br>
			<tag-cloud tags="vm.tags" layout-align="center"></tag-cloud>
			<br>
		</site-content>
	</template>
	<resolve>
		<script name="tags" inject="tagsService">
			return tagsService.list();
		</script>
	</resolve>
	<script inject="$route">
		$route.current.title = 'Tag cloud';
	</script>
</angular-page>