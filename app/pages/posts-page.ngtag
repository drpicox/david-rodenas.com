<angular-page name="/posts">
	<template>
		<site-content>
			<post-list posts="vm.posts"></post-list>
		</site-content>
	</template>
	<resolve>
		<script name="posts" inject="postsService">
			return postsService.list();
		</script>
	</resolve>
	<script inject="$route">
		$route.current.title = 'Posts';
	</script>
</angular-page>