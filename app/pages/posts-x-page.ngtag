<angular-page name="/posts/:basename">
	<template>
		<site-content>
			<post-view post="vm.post"></post-view>
		</site-content>
	</template>
	<resolve>
		<script name="post" params="basename" inject="postsService">
			return postsService.get(basename);
		</script>
	</resolve>
	<script inject="$route">
		$route.current.title = post.title;
		$route.current.description = post.preview;
		$route.current.keywords = post.tags.concat('post');
	</script>
</angular-page>