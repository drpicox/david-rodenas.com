<angular-element name="tag-cloud" bindings="tags">
	<style>
		tag-cloud {
			text-decoration: none;
			font-size: 100%; /* / pow(@font-factor,4); */
		}
		tag-cloud a {
			padding: 0.3em 1em;
			margin: 0.3em 1em 0.3em 0;
		}
	</style>
	<template>
		<a ng-repeat="tag in vm.tags"
		ng-href="#/tags/{{tag.tagname}}" 
		ng-bind="tag.tagname"
		ng-style="{fontSize: tag.weight*100 +'%'}"></a>
	</template>
</angular-element>