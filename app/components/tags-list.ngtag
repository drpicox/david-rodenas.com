<angular-element name="tags-list" bindings="tagnames">
	<style>
		tags-list a {
			display: block;
			margin: 0 .5em -0.4em 0;
		}
	</style>
	<template layout="row" layout-wrap>
		<a	ng-repeat="tagname in ::vm.tagnames"
			ng-href="#!/tags/{{::tagname}}" 
			ng-bind="::tagname" 
			aria-label="tag {{::tagname}}"
		></a>
	</template>
</angular-element>