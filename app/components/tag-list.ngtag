<angular-element name="tag-list" bindings="tagnames">
	<style>
		tag-list {
			display: block;
			line-height: 1;
		}
		tag-list > a {
			display: inline-block;
			text-decoration: none;
			font-size: 0.5em;
			line-height: 2;
			margin: 0 1em 2em 0;
			padding: 0 1em;
			.scaffold-color(@primary);
		}
	</style>
	<template layout="row">
		<a ng-repeat="tagname in vm.tagnames"
		ng-href="#/tags/{{tagname}}" 
		ng-bind="tagname" 
		></a>
	</template>
</angular-element>