<angular-attribute name="head-title-be">
	<script inject="$element,$route,$scope">
		$scope.$watch(function() {
			return $route.current && $route.current.title;
		}, update);

		function update(newTitle) {
			newTitle = newTitle || '@drpicox Home page';
			$element.text('David Rodenas - ' + newTitle);
		}
	</script>
</angular-attribute>