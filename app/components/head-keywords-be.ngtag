<angular-attribute name="head-keywords-be">
	<script inject="$element,$route,$scope">
		var defs = $element.attr('content');

		$scope.$watch(function() {
			return ($route.current && $route.current.keywords || []).join(',');
		}, update);

		function update(newKeywords) {
			if (!newKeywords) {
				newKeywords = defs;
			} else {
				newKeywords += ',' + defs;
			}
			$element.attr('content', newKeywords);
		}
	</script>
</angular-attribute>